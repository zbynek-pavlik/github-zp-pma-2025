<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

  <ImageView
      android:id="@+id/imgAvatar"
      android:layout_width="120dp" android:layout_height="120dp"
      android:contentDescription="Avatar" android:adjustViewBounds="true"/>

  <Button
      android:id="@+id/btnPickImage"
      android:text="Zvolit avatar z galerie"
      android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
