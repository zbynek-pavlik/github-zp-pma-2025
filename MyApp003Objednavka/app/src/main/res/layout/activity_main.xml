<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Nadpis -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jaký produkt si chceš objednat?"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <!-- RadioGroup -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produkt A" />

        <RadioButton
            android:id="@+id/radioOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produkt B" />

        <RadioButton
            android:id="@+id/radioOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produkt C" />
    </RadioGroup>

    <!-- Obrázek produktu -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerInside"
        android:layout_margin="10dp"/>

    <!-- CheckBoxy -->
    <CheckBox
        android:id="@+id/checkOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doplňková služba 1" />

    <CheckBox
        android:id="@+id/checkOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doplňková služba 2" />

    <CheckBox
        android:id="@+id/checkOption3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doplňková služba 3" />

    <!-- Tlačítko -->
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OBJEDNAT"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

    <!-- Výpis souhrnu -->
    <TextView
        android:id="@+id/txtSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Souhrn objednávky:"
        android:textSize="16sp"
        android:layout_marginTop="15dp"/>

</LinearLayout>
